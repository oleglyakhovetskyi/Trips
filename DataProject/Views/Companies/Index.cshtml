@model IEnumerable<DataProject.Company>

@{
    ViewBag.Title = "Companies";
}

<h2>Companies</h2>


<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            Update
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID_comp }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID_comp }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID_comp })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Create New Company", "Create")
</p>
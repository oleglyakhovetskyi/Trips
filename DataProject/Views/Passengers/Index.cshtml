@model IEnumerable<DataProject.Passenger>

@{
    ViewBag.Title = "Passengers";
}

<h2>Passengers</h2>


<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>Update</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID_psg }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID_psg }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID_psg })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Create New Passenger", "Create")
</p>